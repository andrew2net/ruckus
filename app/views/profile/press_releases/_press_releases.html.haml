%ul.draggable.tiles#press-clips{ data: { sorted_url: sort_profile_press_releases_path(format: :js) } }
  - collection.to_a.compact.each do |press_release|
    %li.item.white-box{ data: { id: press_release.id }, id: "press-release-#{press_release.id}" }
      = link_to [:profile, press_release], class:   'trash',
                                             remote:   true,
                                             method:   :delete,
                                             data:     { confirm: 'Are you sure you want to delete this?' },
                                             tabindex: '-1' do
        %i.icon-trash
      %span.drag-handle-wrap
        %i.icon-menu
      = link_to press_release.title,
                edit_profile_press_release_path(press_release),
                class: 'item-link item-title',
                data:  { remote: true }
