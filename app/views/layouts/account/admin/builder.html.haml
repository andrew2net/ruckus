%html
  %head
    = render 'layouts/shared/head'
    = stylesheet_link_tag    'account_admin', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag    'account_builder', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'account_public', 'data-turbolinks-track' => true
    = javascript_include_tag 'account_builder', 'data-turbolinks-track' => true
    = javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{GOOGLE_MAP_KEY}", 'data-turbolinks-track' => true
    - # todo: separate admin panel editing features from public page & include them here
    = csrf_meta_tags
  %body{ class: "admin #{yield(:bodyclasses)}" }
    = load_facebook_init
    = load_twitter_init
    = render 'layouts/shared/flash'
    = yield
    = render 'shared/profile/welcome_screen'
    = render 'shared/crazyegg'
