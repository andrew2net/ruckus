// TODO: Refactor this section (possibly move to a separate file)
$white-4: #D5D5D5;
$blue-1: #008DA0;
$red-1: #E00B43;

#premiumModal {
  &.modal-dialog { width: 720px; }
  .modal-header { border: none; }

  h1 {
    font-weight: 300;
    font-size: 24px;
    margin: 0 0 15px;
    padding: 0;
  }

  form {
    position: relative;
    label {
      cursor: pointer;
      clear: both;
      font-weight: 300;
      font-size: 14px;
      &.error {
        color: $red-1;
      }
    }
    input[type='text'],
    input[type='password'],
    input[type='url'],
    input[type='date'],
    input[type='email'],
    textarea,
    select {
      position: relative;
      cursor: text;
      display: block;
      width: 100%;
      margin-bottom: 15px;
      height: 50px;
      padding: 0 16px;
      font-size: 16px;
      color: #333;
      border: none;
      box-shadow: inset 0px 2px 2px $white-4;
      position: relative;
      &:focus {
        box-shadow: 0px 0px 4px $brand-primary;
        left: -1px;
      }
      &.error {
        margin-bottom: 5px;
        color: $red-1;
        border: 1px solid $red-1;
        left: -1px;
      }
      &.highlighted {
        border: 3px solid $brand-primary;
      }
      &::-ms-clear {
        display: none;
      }
    }
    select {
      padding: 16px;
      background: #fff;
      box-shadow: inset 0px 2px 2px #d5d5d5;
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      background: image-url('select.png') 93% center;
      background-repeat: no-repeat;
      &::-ms-expand {
        display: none;
      }
    }
    textarea {
      padding-top: 10px;
      min-height: 100px;
      resize: none;
    }
    .error-text {
      color: $red-1;
      line-height: auto;
      display: inline-block;
      margin-bottom: 15px;
      display: block;
      width: 100%;
      text-align: right;
    }
    input.date {
      max-width: 150px;
    }
    .input-group {
      .input-group-addon {
        border-radius: 0px !important;
        clear: both;
        border: none;
        background: none;
        padding: 0;
        padding-right: 20px;
        position: relative;
        .check-box {
          top: 4px;
        }
      }
      .form-control {
        border-radius: 0px !important;
        margin-bottom: 15px;
      }
      label.form-control {
        background: none;
        border: none;
        box-shadow: none;
      }
    }
    .margin-comp {
      margin-left: 40px;
    }
    .form-actions {
      padding-top: 30px;
    }

    .control-label abbr { display: none; }

    .button {
      display: inline-block;
      text-transform: uppercase;
      color: white;
      font: bold 14px 'Lato', sans-serif;
      outline: none !important;
      border: none;
      border-bottom-width: 2px;
      border-bottom-style: solid;
      <% if ruckus? %>
        background: #008da0;
        border-bottom-color: #0d7886;
      <% else %>
        background: #bb133e;
        border-bottom-color: #8c1622;
      <% end %>
      height: 30px;
      border-radius: 10px;
      padding: 0 30px;
      line-height: 30px;
      -webkit-box-shadow: none;
      -moz-box-shadow: none;
      box-shadow: none;

      &.right { float: right; }
    }

    .has-error input,
    .has-error textarea,
    .has-error select {
      margin-bottom: 5px;
      color: #e00b43;
      border: 1px solid #e00b43;
      left: -1px;
    }

    .has-error span.help-inline {
      color: #e00b43;
    }

    .help-inline {
      display: block;
      font-size: 14px;
      color: #b00;
    }

    input + .help-inline {
      margin-bottom: 15px;
    }

    .error { color: #e00b43; }
  }

  .small { font-size: 14px; }
  .info-text { padding: 45px 0 0 30px; }
}

.premium-rate {
  font-size: 36px;
  small {
    color: #666;
    font-size: 20px;
  }
}

.premium-actions {
  .cancel {
    display: block;
    margin-top: 8px;
    font-size: 14px;
    text-decoration: none;
    color: #666;
    &:hover { text-decoration: underline; }
  }
}
