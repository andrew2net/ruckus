  /* Feature Icons Set */
  i.feature-icon {
    margin-bottom: 15px !important;
    background-size: 100% auto;
    background-position: 50% 50%;
    background-repeat: no-repeat;

    &.f-icon-build {
      width: 64px;
      height: 64px;
      background-image: image-url('feature-icons/build.png');
    }

    &.f-icon-campaign {
      width: 84px;
      height: 62px;
      background-image: image-url('feature-icons/campaign.png');
    }

    &.f-icon-flag {
      width: 64px;
      height: 68px;
      background-image: image-url('feature-icons/flag.png');
    }
  }
<% end %>
