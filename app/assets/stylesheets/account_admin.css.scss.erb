/* User Account Menu
-------------------------------- */
.admin-nav-wrap {
  z-index: 1000;
  a:hover { text-decoration: none; }
  .admin-subnav { z-index: -1; }
  .user-dropdown {
    .dropdown {
      height: 130px;
      width: 130px;
      position: absolute;
      bottom: 160px;
      -webkit-transform: rotate(-90deg);
      -moz-transform: rotate(-90deg);
      -ms-transform: rotate(-90deg);
      transform: rotate(-90deg);
      font: 16px/100px "Lato", sans-serif;
      text-transform: capitalize;
      text-align: left;
      .icon-down-open { font-size: 16px; }
      a { display: block;}

      .dropdown-toggle {
        color: $primary-1;
        cursor: pointer;
        &:hover { color: lighten($primary-1, 10%); }
      }

      .dropdown-menu {
        background: rgba(30, 37, 38, 0.95);
        -webkit-transform: rotate(90deg);
        -moz-transform: rotate(90deg);
        -ms-transform: rotate(90deg);
        transform: rotate(90deg);
        width: 450px;
        height: 160px;
        border-radius: 10px;
        top: -600px;
        left: -145px;
        -webkit-transition: top 0.25s ease-in-out;
        -moz-transition: top 0.25s ease-in-out;
        transition: top 0.25s ease-in-out;
        display: block !important;

        &:before {
          content: '';
          width: 0;
          height: 0;
          position: absolute;
          border-top: 7px solid transparent;
          border-bottom: 7px solid transparent;
          border-right: 7px solid rgba(30, 37, 38, 0.95);;
          bottom: 15px;
          left: -8px;
        }
      }

      .profile-image {
        float: left;
        height: 70px;
        padding: 0;
        margin: 12px 0 0 20px;
        background-color: #fff;
        border: 3px solid #fff;
        box-shadow: none;
        overflow: hidden;

        img {
          display: block;
          height: 64px;
        }
      }

      .profile-image-candidate {
        width: 70px;
        <% if ruckus? %>
          border-radius: 70px;
        <% end %>
        img {
          width: 64px;
          <% if ruckus? %>
            border-radius: 70px;
          <% end %>
        }
      }

      .info-text {
        padding: 20px 0 0 110px;
        .name{
          margin: 7px 0;
          a {
            font-size: 16px;
            font-weight: 900;
            margin: 0;
            color: #fff;
          }
        }
        .email {
          margin: 0;
          font-size: 16px;
          color: #a4abad;
        }
        h3 { text-transform: none; }
      }

      .submit {
        position: absolute;
        right: 20px;
        bottom: 20px;
        .button {
          float: left;
          padding: 1px 24px;
          height: 32px;
          &.settings { padding: 1px 34px; }
        }

        .logout {
          float: right;
          background-color: #e00b43;
          border-bottom-color: #b30936;
          &:hover { background-color: #ee2c5f; }
          &:active { box-shadow: 0px 2px 1px #b30936 inset; }
        }
      }

      &.open {
        a { color: #fff;}
        .dropdown-menu { top: 256px; }
      }
    }
  }
}

