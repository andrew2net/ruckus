.overflow { overflow: hidden !important; }

/* Icons
-------------------------------- */
.i-icon {
  display: block;
  width: 32px;
  height: 32px;
  margin: 0 auto;
  <% if ruckus? %>
    background-image: image-url('builder-icons-ruckus.png');
  <% else %>
    background-image: image-url('builder-icons-wingop.png');
  <% end %>
  background-repeat: no-repeat;
  overflow: hidden;

  .admin-nav & { margin: 0 auto 4px; }
  &.i-dashboard { background-position: 0 0; }
  &.i-builder { background-position: 0 -34px; }
  &.i-settings { background-position: 0 -68px; }
}

/* Dashboard
-------------------------------- */
.dashboard {
  .admin-nav {
    border-right: 5px solid #f2f2f2;
  }
}

/* View Live Site
-------------------------------- */
.link-live {
  color: $primary-1 !important;

  &:hover {
    color: lighten($primary-1, 10%) !important;
    text-decoration: none;
  }

  &:after {
    content: '\e163';
    top: 1px;
    display: inline-block;
    vertical-align: middle;
    margin-left: 8px;
    font-family: 'Glyphicons Halflings';
    font-style: normal;
    font-weight: 400;
    line-height: 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
}

/* Alerts
-------------------------------- */
.alert {
  margin-bottom: 0;
  border-radius: 0;
  border: none;
  font-size: 14px;
  text-transform: uppercase;
  color: #fff;
}

.alert-danger, .alert-error {
  background-color: #bf7060;
  color: #fff;
  a { color: #222; }
}

.alert-success {
  background-color: <% if ruckus? %>#4fb0bd<% else %>#c24b57<% end %>;
  color: #fff;
}

.close { opacity: 0.6; }

/* Overrides
-------------------------------- */
.form-group {
  .form-group { margin-bottom: 0; }
}

.form-group.check_box_addon {
  display: table-cell;
  padding-right: 20px;
}

form .has-error input,
form .has-error textarea,
form .has-error select {
  margin-bottom: 5px;
  color: #e00b43;
  border: 1px solid #e00b43;
  left: -1px;
}

form .has-error span.help-inline {
  color: #e00b43;
}

.help-inline {
  display: block;
  font-size: 14px;
  color: #b00;
}

input + .help-inline {
  margin-bottom: 15px;
}

.error { color: #e00b43; }

.box-form {
  label.checkbox {
    cursor: pointer;
    padding-left: 20px;
    position: relative;
    height: 20px;
    display: inline-block;
    vertical-align: middle;
    margin-bottom: 10px;
    margin-right: 6px;

    &:before {
      display: inline-block;
      width: 20px;
      height: 20px;
      background: #fff;
      box-shadow: inset 0px 2px 2px #d5d5d5;
      position: absolute;
      top: 0;
      left: 0;
      margin-top: -1px;
      content: "";
      font-size: 14px;
      line-height: 20px;
      font-family: 'ruckus';
      text-align: center;
      color: $primary-1;
    }

    &.active:before {
      content: "\E825";
    }
  }
}

/* Social
-------------------------------- */
#socialfeed-create {
  .social_post_message {
    margin-bottom: 20px;
  }

  .checkbox {
    float: left;
    clear: none;
    position: relative;
    text-indent: -9999px;
    margin: 0 50px 0 0;

    span {
      &:before {
        position: absolute;
        top: -15px;
        left: 30px;
        z-index: 10;
        font-family: 'ruckus';
        font-size: 34px;
        text-indent: 0;
        color: #ccc;
      }
    }

    span.twitter {
      &:before {
        width: 29px;
        height: 29px;
        border-radius: 5px;
        padding-left: 6px;
        position: absolute;
        top: -6px;
        left: 30px;
        z-index: 10;
        font-family: 'ruckus';
        font-size: 21px;
        text-indent: 0;
        color: #ededed;
        background-color: #ccc;
      }
    }

    input {
      &:before {
        display: inline-block;
        width: 20px;
        height: 20px;
        background: #fff;
        box-shadow: inset 0px 2px 2px #d5d5d5;
        position: absolute;
        top: 0;
        left: 0;
        margin-top: -1px;
        content: "";
        font-size: 14px;
        line-height: 20px;
        font-family: 'ruckus';
        text-align: center;
        color: $primary-1;
      }
    }

    input[type="checkbox"]:checked{
      &:before {
        content: "\E825";
      }
    }

    input {
      &:hover {
        + span {
          &:before { color: #aaa; }
        }
      }

      &:hover {
        + span.twitter {
          &:before {
            background-color: #aaa;
            color: #ededed;
          }
        }
      }

      &:checked {
        + span {
          &:before { color: $primary-1; }
        }
      }

      &:checked {
        + span.twitter {
          &:before {
            color: #ededed;
            background-color: $primary-1;
          }
        }
      }
    }
  }

  .form-actions {
    float: right;
    padding: 0 !important;
    margin-top: -5px;
  }

  .checkbox-facebook span:before { content: '\e814'; }
  .checkbox-twitter span:before { content: '\e815'; }
}

/* jQuery Datepicker
-------------------------------- */
.ui-datepicker {
  border-radius: 0;
  border: 2px solid #ddd;
  padding: 0;

  .ui-datepicker-header {
    border: none;
    border-radius: 0;
  }

  td {
    .ui-state-default {
      padding: 2px 3px;
      border: none;
      border-radius: 5px;
      background: none;
      text-align: center;
      color: #1e2526 !important;
    }

    .ui-state-highlight {
      color: #fff !important;
      background: #ff6801;

      .theme-red & { background: $brand-red; }
      .theme-green & { background: $brand-green; }
      .theme-blue & { background: $brand-blue; }
      .theme-grey & { background: $brand-grey; }
    }

    .ui-state-active {
      color: #fff !important;
      background: $primary-1;
    }
  }
}

