@import 'shared/shared/colours';
@import 'font-awesome';
@import 'account/public/account';
@import 'account/public/google_map';

/* Cells */
@import 'media_stream';
@import 'issues';
@import 'ask_question';
@import 'press_events';

.issues-single-modal .ruckus-modal-head.color-block,
#issues #issues-slider-wrapper .css-slider .slide h4.color-block {
  &.category-1 { background-color: #bf7060; }
  &.category-2 { background-color: #bfa960; }
  &.category-3 { background-color: #9cbf60; }
  &.category-4 { background-color: #63bf60; }
  &.category-5 { background-color: #60bf96; }
  &.category-6 { background-color: #60afbf; }
  &.category-7 { background-color: #6076bf; }
  &.category-8 { background-color: #8360bf; }
  &.category-9 { background-color: #bc60bf; }
  &.category-10 { background-color: #bf6089; }
  &.category-11 { background-color: #bf8c60; }
  &.category-12 { background-color: #b9bf60; }
  &.category-13 { background-color: #80bf60; }
  &.category-14 { background-color: #60bf79; }
  &.category-15 { background-color: #60bfb3; }
  &.category-16 { background-color: #6093bf; }
  &.category-17 { background-color: #6660bf; }
  &.category-18 { background-color: #9f60bf; }
  &.category-19 { background-color: #bf60a6; }
  &.category-20 { background-color: #bf606c; }
  &.category-national-security { background-color: #041765; }
  &.category-custom:before {
    background-color: $brand-primary;
    .theme-red & { background-color: $brand-red; }
    .theme-green & { background-color: $brand-green; }
    .theme-blue & { background-color: $brand-blue; }
    .theme-grey & { background-color: $brand-grey; }
  }
}

.control-label abbr { display: none; }

#issues #issues-slider-wrapper a.slider-nav.prev,
#issues #issues-slider-wrapper a.slider-nav.next {
  width: 50px;
  height: 100%;
  top: 0;
  margin: 0;
}

#issues #issues-slider-wrapper a.slider-nav.prev { left: 0; }
#issues #issues-slider-wrapper a.slider-nav.next { right: 0; }

#issues #issues-slider-wrapper a.slider-nav.prev span,
#issues #issues-slider-wrapper a.slider-nav.next span {
  position: absolute;
  top: 50%;
  left: 50%;
  margin: -15px 0 0 -10px;
}

.social-feed-meta img,
.btn-speech-bubble img {
  width: 44px;
  height: 44px;
}

.social-feed-meta {
  .empty-image {
    <% if ruckus? %>
      width: 44px;
      height: 44px;
      border-radius: 50%;
      background: #008da0;
    <% else %>
      width: 35px;
      height: 35px;
      margin-top: 10px;
      background: #bb133e;
    <% end %>
    position: absolute;
    top: 10px;
    left: -20px;
    overflow: hidden;
    -webkit-box-shadow:  0px 2px 3px 0px rgba(0, 0, 0, 0.3);
    -moz-box-shadow:  0px 2px 3px 0px rgba(0, 0, 0, 0.3);
    box-shadow:  0px 2px 3px 0px rgba(0, 0, 0, 0.3);
  }
}

div.scrollWrapper {
  div.scrollableArea {
    margin: 0 auto;
    text-align: center;
    font-size: 0;
    > * {
      float: none;
      display: inline-block;
      vertical-align: top;
    }
    .media-element {
      &.unclickable {
        z-index: -1;
      }
    }
  }
}

.signup-wrapper {
  overflow: hidden;
  padding: 20px 30px;
  .row {
    margin: 0 -8px;
    .form-group {
      padding: 0 8px;
    }
  }
  .terms {
    color: #aab1b3;
  }
}

#media {
  &:before, &:after { display: none; }

  .media-control {
    position: absolute;
    z-index: 100;
    top: 0;
    width: 50px;
    height: 100%;
    cursor: pointer;
    opacity: 0.75;

    i {
      position: absolute;
      top: 50%;
      left: 50%;
      margin: -14px 0 0 -10px;
      color: #fff;
      text-shadow: 0 0 1px rgba(0, 0, 0, 0.5);
      font-size: 25px;
    }

    &:hover { opacity: 1; }
  }

  .media-prev { left: 0; }
  .media-next { right: 0; }

  #media-slider {
    .media-element {
      img {
        max-height: none;
        margin-top: -44px;
        @media (min-width: 768px) { margin-top: 0; }
      }
    }
  }
}

.has-error span.help-inline { color: #a94442; }

.ask-question-centered {
  margin-top: 22px;
  padding-bottom: 70px;
  text-align: center;
  a.btn {
    display: inline-block;
    float: none;
  }
}

.alert {
  margin-bottom: 0;
  border-radius: 0;
  border: none;
  font-size: 14px;
  text-transform: uppercase;
  color: #fff;
  font-family: "Lato", sans-serif;
}

.alert-danger, .alert-error {
  background-color: #bf7060;
  color: #fff;
  a { color: #222; }
}

.alert-success {
  background-color: <% if ruckus? %>#4fb0bd<% else %>#c24b57<% end %>;
  color: #fff;
}

.alert-info {
  background-color: #1f1f1f !important;
  font-size: 18px;
  text-transform: capitalize;
  height: 60px;
}

.modal-backdrop.in {
  opacity: 0.0;
}

.upgrade-bt {
  background-color: #006977 !important;
  border: none !important;
  width: 130px !important;
  color: white !important;
  float: right !important;
}

.upgrade-bt2 {
  background-color: #006977 !important;
  border: none !important;
  width: 130px !important;
  color: white !important;
}

#wrapper {
  border-top: 0px !important
}

#premiumModal.modal-dialog {
  width: 720px;
}

form input[type="text"], form select {
  position: relative;
  cursor: text;
  display: block;
  width: 100%;
  margin-bottom: 15px;
  height: 50px;
  padding: 0 16px;
  font-size: 16px;
  color: #333;
  border: none;
  box-shadow: inset 0px 2px 2px #d5d5d5;
}

.modal-backdrop {
  opacity:0.5 !important;
}

#header {
  #join-campaign-head { z-index: 1; }
  #account-header {
    width: 100%;
    margin: 0 auto;
    padding-bottom: 50px;
    .mask {
      <% if ruckus? %>
        bottom: 0;
        height: 260px;
        opacity: 0.25;
        background: -webkit-linear-gradient(top, rgba(30,87,153,0) 0%,rgba(0,0,0,1) 25%,rgba(0,0,0,1) 100%);
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(30,87,153,0)), color-stop(25%,rgba(0,0,0,1)), color-stop(100%,rgba(0,0,0,1)));
        background: -moz-linear-gradient(top, rgba(30,87,153,0) 0%, rgba(0,0,0,1) 25%, rgba(0,0,0,1) 100%);
        background: -o-linear-gradient(top, rgba(30,87,153,0) 0%,rgba(0,0,0,1) 25%,rgba(0,0,0,1) 100%);
        background: -ms-linear-gradient(top, rgba(30,87,153,0) 0%,rgba(0,0,0,1) 25%,rgba(0,0,0,1) 100%);
        background: linear-gradient(to bottom, rgba(30,87,153,0) 0%,rgba(0,0,0,1) 25%,rgba(0,0,0,1) 100%);
      <% else %>
        top: 0;
        height: 100%;
        background: rgba(0, 0, 0, 0.35);
      <% end %>
      position: absolute;
      left: 0;
      width: 100%;
    }

    .add-name {
      width: 100%;
      position: absolute;
      left: 0;
      padding: 0 20px;
    }

    .account-image-add-organization {
      .add-name { padding: 0 10px; }
    }

    h1, .account-meta { position: relative; }
    h1 { margin-top: 20px; }

    .account-image {
      display: inline-block;
      vertical-align: top;
    }

    .account-image-rounded {
      background: #fff;
      border: 4px solid #fff;
      -webkit-box-shadow: 0px 0px 7px 0px rgba(0, 0, 0, 0.3);
      -moz-box-shadow: 0px 0px 7px 0px rgba(0, 0, 0, 0.3);
      box-shadow: 0px 0px 7px 0px rgba(0, 0, 0, 0.3);
      overflow: hidden;
    }

    .account-meta {
      text-transform: uppercase;
    }
  }
}

.account-image-candidate {
  width: 140px;
  .account-image-rounded {
    width: 140px;
    height: 140px;
    <% if ruckus? %>
      border-radius: 50%;
    <% end %>
  }
}

#contact-info {
  position: relative;
  .edit-link {
    position: absolute;
    top: 2px;
    left: -24px;
    margin: 0;
  }
}

.events-modal {
  .event {
    .event-meta {
      .title h3 {
        padding-right: 40px;
      }
    }
  }
}


#about-video {
  img {
    display: block;
    margin: 0 auto;
  }
}
