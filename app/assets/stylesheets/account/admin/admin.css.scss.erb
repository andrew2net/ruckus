    }
  }

  .additional-agreement {
    position: relative;
    margin-bottom: 10px;
    height: 50px;
    input {
      margin-bottom: 0;
      float: left;
    }
    a.trash {
      position: absolute;
      opacity: 1;
      top: 15px;
