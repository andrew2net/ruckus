@import 'colors';

// $brand-primary: #9d2a28;
// $font-size-base: 14px;
$font-family-sans-serif: "Lato", sans-serif;
$font-family-serif: "Merriweather", serif;
$font-family-base: $font-family-sans-serif;
$font-family-ruckus: 'ruckus';
