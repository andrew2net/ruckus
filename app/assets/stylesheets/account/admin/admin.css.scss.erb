/* ================================================================
Colors
================================================================ */

$white-1: #FFF;
$white-2: #F7F7F7;
$white-3: #EDEDED;
$white-4: #D5D5D5;
$white-5: #A1A1A1;

$black-1: #AAB1B3;
$black-2: #1E2526;
$black-3: #14191A;

$orange-1: #FF6801;
$orange-2: #D95802;

$red-1: #E00B43;
$red-2: #B30936;

$brand-primary: $primary-1;

/* Small devices (tablets, 768px and up) */
@media (min-width: 768px) {}

/* Medium devices (desktops, 992px and up) */
@media (min-width: 992px) {}

/* Large devices (large desktops, 1200px and up) */
@media (min-width: 1200px) {}

@import "../../shared/fonts/font-ruckus";
@import "bootstrap";
@import "../../shared/shared/magnific-popup";
@import "../../shared/shared/reusables";
@import "jquery.mcustomscrollbar";
@import "jquery-ui/themes/flick/jquery-ui-1.10.4.custom";
<% if ruckus? %>
  @import "jquery-ui/themes/ruckus-theme/jquery-ui-1.10.4.ruckus";
<% else %>
  @import "jquery-ui/themes/wingop-theme/jquery-ui-1.10.4.wingop";
<% end %>

/* ================================================================
General Admin Styles
================================================================ */
html {
  height: 100%;
}
body {
  position: relative;
  min-height: 100%;
  background: $white-2;
  padding-left: 270px;
  font-family: $font-family-base;
  font-size: 16px;
  color: $black-3;
  -webkit-font-smoothing: antialiased;
  > div.texture {
    position: absolute;
    display: block;
    top: 0;
    right: 0;
    bottom: 0;
    left: 1100px;
    background: image-url('ps-neutral.png');
    background-position: left top;
    -webkit-background-size: 16px;
       -moz-background-size: 16px;
        -ms-background-size: 16px;
         -o-background-size: 16px;
            background-size: 16px;
    z-index: 1;
  }
}

.admin {
  .content {
    position: relative;
    overflow: hidden;
    width: 800px;
    padding: 55px 40px 30px;
    &:before, &:after {
      position: absolute;
      display: block;
      content: '';
      width: 40px;
      height: 100%;
      top: 0;
      bottom: 0;
      z-index: 999;
    }
    &:before {
      // http://www.colorzilla.com/gradient-editor/#f7f7f7+0,f7f7f7+100&1+0,1+80,0+100;Custom
      left: 0;
      background: url(data:image/svg+xml;base64,);
      background: -moz-linear-gradient(left,  rgba(247,247,247,1) 0%, rgba(247,247,247,1) 80%, rgba(247,247,247,0) 100%); /* FF3.6+ */
      background: -webkit-gradient(linear, left top, right top, color-stop(0%,rgba(247,247,247,1)), color-stop(80%,rgba(247,247,247,1)), color-stop(100%,rgba(247,247,247,0))); /* Chrome,Safari4+ */
      background: -webkit-linear-gradient(left,  rgba(247,247,247,1) 0%,rgba(247,247,247,1) 80%,rgba(247,247,247,0) 100%); /* Chrome10+,Safari5.1+ */
      background: -o-linear-gradient(left,  rgba(247,247,247,1) 0%,rgba(247,247,247,1) 80%,rgba(247,247,247,0) 100%); /* Opera 11.10+ */
      background: -ms-linear-gradient(left,  rgba(247,247,247,1) 0%,rgba(247,247,247,1) 80%,rgba(247,247,247,0) 100%); /* IE10+ */
      background: linear-gradient(to right,  rgba(247,247,247,1) 0%,rgba(247,247,247,1) 80%,rgba(247,247,247,0) 100%); /* W3C */
    z-index: -1;
    }
    &:after {
      // http://www.colorzilla.com/gradient-editor/#f7f7f7+0,f7f7f7+100&0+0,1+20,1+100;Custom
      right: 0;
      background: url(data:image/svg+xml;base64,);
      background: -moz-linear-gradient(left,  rgba(247,247,247,0) 0%, rgba(247,247,247,1) 20%, rgba(247,247,247,1) 100%); /* FF3.6+ */
      background: -webkit-gradient(linear, left top, right top, color-stop(0%,rgba(247,247,247,0)), color-stop(20%,rgba(247,247,247,1)), color-stop(100%,rgba(247,247,247,1))); /* Chrome,Safari4+ */
      background: -webkit-linear-gradient(left,  rgba(247,247,247,0) 0%,rgba(247,247,247,1) 20%,rgba(247,247,247,1) 100%); /* Chrome10+,Safari5.1+ */
      background: -o-linear-gradient(left,  rgba(247,247,247,0) 0%,rgba(247,247,247,1) 20%,rgba(247,247,247,1) 100%); /* Opera 11.10+ */
      background: -ms-linear-gradient(left,  rgba(247,247,247,0) 0%,rgba(247,247,247,1) 20%,rgba(247,247,247,1) 100%); /* IE10+ */
      background: linear-gradient(to right,  rgba(247,247,247,0) 0%,rgba(247,247,247,1) 20%,rgba(247,247,247,1) 100%); /* W3C */
    }
    div.inner {
      position: relative;
      padding: 30px 0 0 0;
    }
    div.col {
      position: relative;
      width: 50%;
    }
  }
  p {
    margin-bottom: 20px;
  }

  h1 {
    font-weight: 300;
    font-size: 24px;
    margin: 0 0 15px;
    padding: 0;
  }

  h1 + p {
    font-style: italic;
    font-weight: 300;
    a {
      font-style: normal;
    }
  }

  h2 {
    text-transform: uppercase;
    letter-spacing: .1em;
    font-size: 16px;
    font-weight: 300;
  }

  h3 {
    font-size: 16px;
    font-weight: 700;
    label {
      font-size: inherit;
      font-weight: inherit;
    }
  }

  a {
    color: $primary-1;
    text-decoration: none;
    &:hover {
      color: lighten($primary-1, 15%);
      text-decoration: none;
    }
    &:focus {
      outline: none;
      color: $primary-1;
      text-decoration: none;
    }
    &.destroy {
      color: $red-1;
      &:hover {
        color: lighten($red-1, 10%);
      }
      &:focus {
        color: $red-1;
      }
    }
  }

  p {
    margin-bottom: 20px;
  }

  .admin-nav-wrap {
    $fixed-height: 690px;
    $nav-width: 100px;
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    z-index: 1000;
    .admin-nav {
      background: $black-2;
      width: $nav-width;
      $nav-spacing: 60px;
      min-height: $fixed-height;
      position: absolute;
      left: 0;
      top: 0;
      bottom:0;
      z-index: 2;
      > ul {
        margin: 0;
        padding: 0;
        list-style: none;
        li { text-align: center; }
        a {
          display: block;
          height: 100px;
          padding: 25px 0;
          position: relative;
          overflow: hidden;
          color: $primary-1;
          text-transform: uppercase;
          filter: alpha(opacity=75);
          opacity: 0.75;
          font-size: 12px;
          background-color: transparent;
          -webkit-transition: opacity 0.25s linear, background-color 0.25s linear;
             -moz-transition: opacity 0.25s linear, background-color 0.25s linear;
              -ms-transition: opacity 0.25s linear, background-color 0.25s linear;
               -o-transition: opacity 0.25s linear, background-color 0.25s linear;
                  transition: opacity 0.25s linear, background-color 0.25s linear;

          &:hover, &.active {
            background: #fff;
            text-decoration: none;
            filter: alpha(opacity=100);
            opacity: 1;
          }
          &.highlight {
            color: $orange-1;
            font-weight: 700;
          }
          &.mainnav-logout {
            line-height: 1em;
            span {
              display: block;
              font-size: 11px;
              text-transform: uppercase;
            }
          }
        }
        i {
          font-size: 30px;
        }
      }
      .sitename {
        position: absolute;
        bottom: 20px;
        display: block;
        @include transform(-90deg);
        font: 16px/100px $font-family-base;
        color: $white-1;
        text-transform: uppercase;
        height: $nav-width;
        width: $nav-width;
        text-align: left;
        <% unless ruckus? %>
          bottom: 60px;
          width: 100px;
          height: 30px;
          text-indent: -9999px;
          background-image: image-url('win-white.png');
          background-repeat: no-repeat;
          background-position: 50% 50%;
          background-size: 100% auto;
          @media (-webkit-min-device-pixel-ratio: 2) {
            background-image: image-url('brand-win-gop-admin-2x.png');
          }
        <% end %>
        &:hover {
          text-decoration: none;
          color: darken($white-1, 20%);
        }
        <% if ruckus? && false %>
          &:after {
            content: 'beta';
            font-family: $font-family-sans-serif;
            font-weight: 700;
            font-size: 10px;
            text-transform: uppercase;
            background: #ff6801;
            color: $white-1;
            display: inline-block;
            vertical-align: 3px;
            padding: 0 4px 0 2px;
            letter-spacing: -0.125px;
            line-height: 13px;
            position: absolute;
            top: 44px;
            right: -8px;
          }
        <% end %>
      }
    }
    .admin-subnav {
      position: absolute;
      top: 0;
      left: $nav-width;
      bottom: 0;
      background: $white-1;
      width: 170px;
      border-right: solid 5px rgba(black, .05);
      text-align: center;
      h2 {
        margin: 0 0 30px;
        padding: 60px 0 40px;

        .paid-upgrade-block {
          padding-top: 10px;
          .premium-label {
            cursor: pointer;
            position: inherit;
            font-weight: 400;
          }
        }

        &:after {
          content: "";
          width: 25%;
          height: 1px;
          display: block;
          border-bottom: 1px solid $black-2;
          margin: 0 auto;
          position: relative;
          bottom: -40px;
        }
      }
      > ul {
        margin: 0;
        padding: 0;
        list-style: none;
        li {
          margin-bottom: 10px;
          height: 40px;
          &:last-child {
            margin-bottom: 0px;
          }
          a {
            display: block;
            height: 40px;
            line-height: 40px;
            font-weight: 400;
            color: $black-1;
            -webkit-transition: color 0.25s linear, background-color 0.25s linear;
               -moz-transition: color 0.25s linear, background-color 0.25s linear;
                -ms-transition: color 0.25s linear, background-color 0.25s linear;
                 -o-transition: color 0.25s linear, background-color 0.25s linear;
                    transition: color 0.25s linear, background-color 0.25s linear;
            &:hover {
              color: $black-3;
            }
            &.active {
              color: $primary-1;
            }
            &.highlight {
              color: $white-1;
              background-color: $orange-1;
              font-weight: 700;
            }
          }
        }
      }
      .actions {
        position: absolute;
        bottom: 25px;
        width: 100%;
      }
      .button + .button {
        margin-top: 15px;
        margin-left: 0px;
      }
    }
  }

  .hidden-fields {
    display: none;
  }

  .inner-footer {
    text-align: center;
    padding: 30px 0;
    .action {
      margin-bottom: 10px;
    }
  }

  .large-text {
    font-size: 25px;
  }

  .extra-large-text {
    font-size: 50px;
  }
}

/* ================================================================
Dashboard
================================================================ */
body.dashboard {
  padding-left: 100px;
  > div.texture {
    left: 1100px;
  }
}
.dashboard {
  .content {
    padding-top: 0px;
    width: 1000px;
  }
  h3 a {
    display: inline-block;
    margin-left: 10px;
    font-size: 80%;
  }
  .profile-image {
    $profile-square: 100px;
    $profile-padding: 10px;
    $box-size: $profile-square + ( $profile-padding * 2 );
    padding: $profile-padding;
    background: $white-1;
    box-shadow: 0px 1px 1px lighten($black-2, 70%);
    float: left;
    img {
      position: relative;
      overflow: hidden;
    }
  }
}
.dashboard-header {
  position: relative;
  margin-bottom: 30px;
  padding-bottom: 3px;
  .dashboard-header-text {
    float: left;
    padding: 30px 0 0 10px;
    h1 {
      margin-bottom: 5px;
      a {
        color: $black-3;
        &:hover {
          color: $primary-1;
        }
      }
    }
  }
}
.metrics {
  margin-bottom: 45px;
  .extra-large-text {
    font-weight: 200;
    display: block;
  }
  .inline-actions li {
    &:before {
      content: "â€¢";
      color: $primary-1;
      display: inline-block;
      position: relative;
      left: -12px;
    }
    &:first-child:before {
      content: "";
    }
  }
}
.dash-update-lists {
  position: relative;
  .large-text {
    font-weight: 200;
    white-space: nowrap;
    text-overflow: ellipsis;
    display: block;
    overflow: hidden;
  }
  p {
    margin-bottom: 0;
  }
  .dash-view-list {
    > li {
      margin-bottom: 15px;
      .inline-actions {
        font-size: 13px;
        color: $black-1;
        font-weight: bold;
        li:before {
          font-size: 10px;
          vertical-align: text-top;
        }
      }
    }
  }
}
.sidebar {
  position: relative;
  overflow: hidden;
  form#socialfeed-create {
    @extend .clearfix;
    position: relative;
    margin-bottom: 20px;
    textarea {
      min-height: 140px;
      margin-bottom: 0px;
    }
    .form-actions {
      position: relative;
      overflow: hidden;
      padding-top: 15px;
    }
    button {
      float: right;
    }
  }
  ul.post-feed {
    border-top: 1px solid lighten($black-1, 15%);
    padding-top: 20px;
    > li {
      .post-date {
        color: lighten($black-1, 5%);
      }
      p {
        margin-bottom: 5px;
      }
    }
  }
}
#dashboard-graph {
  height: 150px;
  .flot-text {
    color: $white-3;
  }
}
.dashboard-graph-wrap {
  margin-bottom: 30px;
}
#chart-tooltip {
  width: 100px;
  height: 55px;
  padding: 0;
  .tooltip-inner {
    position: relative;
    overflow: hidden;
    display: table;
    width: 100%;
    height: 55px;
    padding: 0 5px;
    font-size: 14px;
    color: $black-3;
    font-weight: 500;
    > div {
      position: relative;
      display: table-cell;
      vertical-align: middle;
      span {
        display: block;
        font-weight: 700;
        color: $black-1;
        &:before {
          position: relative;
          display: inline-block;
          font-family: $font-family-ruckus;
          margin-right: 2px;
        }
        &.up:before {
          content: '\E82D';
        }
        &.down:before {
          content: '\E82E';
        }
      }
    }
  }
  .tooltip-arrow {
    bottom: -5px;
  }
}
.dashboard-dropdown {
  position: relative;
  float: right;
  margin-top: 30px;
  width: 100%;
  button {
    text-align: left;
    &.large {
      padding: 0 15px;
      width: 100%;
    }
    i.icon-down-open {
      float: right;
    }
  }
  .dropdown-menu {
    width: 100%;
    border-radius: 20px;
    background: rgba($brand-primary, 0.9);
    color: $white-1;
    border: none;
    padding: 15px;
    li {
      height: 60px;
      font-size: 20px;
      margin: 0;
    }
    a {
      display: block;
      height: 60px;
      line-height: 56px;
      color: $white-1;
      border-radius: 10px;
      &:hover {
        background-color: rgba($brand-primary, 0.8);
        color: $white-1;
      }
    }
  }
}

