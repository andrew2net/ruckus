/* ================================================================
Media Styles
================================================================ */
form.media-upload-form {
  position: relative;
  overflow: hidden;
  text-align: center;
  span.or {
    position: relative;
    display: block;
    margin: 0 15px;
    float: left;
  }
  &.has-video-upload {
    span.or {
      top: 38px;
    }
    .fileupload {
      top: 35px;

      &.large {
        top: 18px;

        &.disabled:hover {
          background: white;
          border-bottom-color: #e0e0e0;
        }
      }
    }
  }
}
.fileupload-wrapper {
  position: relative;
  float: left;
}
.fileupload {
  position: relative;
  overflow: hidden;
  &.large {
    padding: 0 30px;
  }
  input.upload {
    position: absolute;
    top: 0;
    right: 0;
    margin: 0;
    padding: 0;
    font-size: 20px;
    cursor: pointer;
    opacity: 0;
    filter: alpha(opacity=0);
  }
  &.disabled {
    input.upload {
      cursor: default;
    }
  }
}
.add-video-wrapper {
  position: relative;
  float: left;
  text-align: left;

  .video-url {
    display: inline-block;
    vertical-align: middle;

    .input-icon.url {
      input[type="url"] { padding-left: 30px; }
        &:after {
          left: -5px;
        }
    }
  }

  input[type="submit"] {
    position: relative;
    vertical-align: middle;
    margin: 15px 0 0 15px;
  }
}

.media-wrapper {
  position: relative;
  text-align: center;
  h3 {
    margin-top: 0;
    margin-bottom: 15px;
  }
  .media-block {
    width: 164px;
    padding: 12px 12px 0;
    .image-wrapper {
      position: relative;
      overflow: hidden;
      display: block;
      width: 140px;
      height: 140px;
      margin: 0 auto;
      img {
        display: block;
        max-width: 100%;
        @include no-user-select();
        pointer-events: none;
      }
    }
  }
  &.profile, &.background, &.hero {
    margin-bottom: 30px;
    .media-block {
      margin: 0 auto 15px;
      padding-bottom: 25px;
    }
  }
  .no-media-in-stean {
    p {
      color: #999;
      font-size: 16px;
      a {
        font-size: 24px;
        margin-bottom: 20px;
      }
    }
  }
}

.no-media {
  p {
    color: #999;
    font-size: 16px;
  }
}

.media-upload, .media-bucket {
  h3 {
    margin: 0 5px 15px;
    padding-bottom: 15px;
    border-bottom: 1px solid $white-4;
    text-align: left;
  }
}
.media-bucket {
  position: relative;
  text-align: center;
  .field-inset {
    overflow: visible;
    padding-left: 10px;
    padding-right: 10px;
  }
  ul {
    margin-bottom: 30px;
    > li {
      margin-left: 5px;
      margin-right: 5px;
      float: left;
    }
  }
  .button {
    position: absolute;
    right: 12px;
    bottom: 12px;
    &.top {
      bottom: auto;
      top: 12px;
    }
  }
