.content {
  .inner {
    .col {
      #events {
        margin-bottom: 40px;
      }
    }
    .line {
      border-top: 1px solid #d5d5d5;
      padding-top: 20px;
      .draggable.tiles.ui-sortable {
        padding-top: 20px;
      }
    }
  }
}

#upcoming_events {
  padding-top: 20px;
  h3 { margin-bottom: 15px; }
  
  h1 { margin-bottom: 0px; }
  p {
    font-weight: 400;
    color: #aab1b3;
  }
} 

.event-create {
  .end-time {
    margin-bottom: 15px;
  }
  .row {
    .right {
      position: absolute;
      right: 0px;
      margin-top: 10px;
    }
    .form-group {
      margin-bottom: 0;
    }
    .form-group.col-xs-5 {
      .glyphicon.glyphicon-calendar {
        color: #aab1b3;
        position: absolute;
        z-index: 1;
        right: 17px;
        top: 18px;
      }
    }
  }
}

.ruckus-modal-body.biography {
  top: 0;
}
