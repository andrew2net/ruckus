$red: #e24848;
.facebook-button-group,
.twitter-button-group {
  .form-group { margin-bottom: 0; }

  i.fa-repeat {
    color: #89c9d1;
    &:hover { color: #008da0; }
  }

  #fb-campaing-pages { position: relative; }

  .btn-group-justified {
    padding: 10px 0;
    .btn-default {
      height: 50px;
      border: none;
      padding: 10px 20px;
      position: relative;
      text-align: left;
      box-shadow: 0px 2px 2px 0px #eaeaea;
      i {
        position: absolute;
        font-size: 30px;
        left: 5px;
        top: 5px;
      }

      .icon-facebook-squared { color: #3b5998; }

      .icon-twitter { color: #55acee; }

      .name { 
        padding-left: 30px;
        font-weight: 700;
        font-size: 14px; 
      }

      .activate, .edit {
        display: none;
        font-weight: 700;
        font-size: 14px;
        position: absolute;
        right: 20px;
        top: 15px;
      }
    }

    .active {
      .edit {
        display: block;
        color: <% if ruckus? %>#388da2<% else %>#444<% end %>;
      }

      .activate { 
        display: none;
      }
    }

    :not(.active) {
      .edit {
        display: none;
      }

      .activate { 
        display: block;
        color: $red;
      }
    }

    .btn-default:hover {
      background-color: #fdfdfd;
      // box-shadow: 0px -1px 2px 0px #d9d9d9;
    }

    .active { background-color: #fff;}
  }

  .box-form {
    display: none;
    .field-inset {overflow: visible;}
    .icon-help-circled {
      color: #B8B8B8;
      vertical-align: top;
      margin-left: 5px;
    }
    .tooltip {
      width: 250px;
    }
  }

  .field-inset {
    margin-top: -30px;
    p {
      margin-bottom: 20px;
      font-size: 13px;
      color: #aab1b3;
    }
    .unlink_account_button {
      position: absolute;
      top: 30px;
      right: 18px;
      z-index: 9999;
      font-weight: bold;
      font-size: 13px;
    }
  }

  .form {
    margin-top: -20px;
    padding-top: 30px;

    label { font-weight: 400; }
  }
  .simple_form.edit_profile {
    // height: 80px;

    input, textarea { outline:none; }
    input:active, textarea:active { outline:none; }
    :focus { outline:none; }

    .checkbox { 
      display: inline-block; 
      width: auto;
    }
    .boolean.optional { margin-right: 13px; }

    .save, .cancel-btn {
      width: 100px;
      height: 30px;
      font: bold 14px "Lato", sans-serif;
      border-radius: 10px;
      padding-top: 5px;
    }

    .save{
      color: white;
      border: none;
      border-bottom-width: 2px;
      border-bottom-style: solid;
      background: $primary-1;
      border-bottom-color: $primary-2;
      position: absolute;
      bottom: 0;
      right: 0;
      &:hover { background-color: <% if ruckus? %>#327e8d<% else %>lighten(#bb133e, 5%)<% end %>; }
    }

    .cancel-btn {
      position: absolute;
      bottom: -1px;
      right: 120px;
      border: none;
      color: #aab1b3;
      background-color: #EBEBEB;
    }
    .tip.facebook_public_page_url {
      float: right;
    }
  }

  .unlink_account_button {
    color: $red;
  }
}

/* ================================================================
EVENTS
