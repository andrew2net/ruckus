@import 'account/admin/colors';

// Circle progress

$size: 50px;
@mixin circle($size) {
  content: "";
  position: absolute;
  border-radius: 50%;
  left: calc(50% - #{$size/2});
  top: calc(50% - #{$size/2});
  width: $size;
  height: $size;
}
.progress-pie-chart {
  background-color: $black-2;
}
.progress-pie-chart {
  width: $size;
  height: $size;
  border-radius: 50%;
  background-color: $primary-1;
  position: relative;
  &.gt-50 {
    background-color: #fff;
  }
}
.ppc-progress {
  @include circle($size);
  clip: rect(0, $size, $size, #{$size/2});
  .ppc-progress-fill {
    @include circle($size);
    clip: rect(0, #{$size/2}, $size, 0);
    background: #fff;
    @include rotate(60deg);
  }
  .gt-50 & {
    clip: rect(0, #{$size/2}, $size, 0);
    .ppc-progress-fill {
      clip: rect(0, $size, $size, #{$size/2});
      background: $primary-1;
    }
  }
}
.ppc-percents {
  @include circle(#{$size/1.15});
  background: $black-2;
  text-align: center;
  span {
    display: block;
    font-size: 14px;
    font-weight: bold;
    color: #fff;
    line-height: 45px;
  }
}
