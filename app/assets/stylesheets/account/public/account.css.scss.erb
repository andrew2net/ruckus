@import "../../shared/shared/global";

$education-color: #6076bf;
$healthcare-color: #bf606c;
$economy-color: #b9bf60;
$veteran-affairs-color: #60bf96;

$red-dark-1: #bb133e;
$red-dark-2: #8c1622;
$red-dark-3: #bf1e2e;

<% if ruckus? %>
  $primary-1: $blue-1;
  $primary-2: $blue-2;
  $primary-3: $blue-3;
<% else %>
  $primary-1: $red-dark-1;
  $primary-2: $red-dark-2;
  $primary-3: $red-dark-3;
<% end %>

$primary-1-opacity: rgba($primary-1, 0.9);

/* ================================================================
General Styles
================================================================ */
a {
  .theme-red & { color: $brand-red; }
  .theme-green & { color: $brand-green; }
  .theme-blue & { color: $brand-blue; }
  .theme-grey & { color: $brand-grey; }
}

span.section-label {
  position: relative;
  display: block;
  width: 100%;
  height: 100px;
  line-height: 100px;
  font-size: 30px;
  text-align: center;
  margin: 0 auto;
  color: #666;
}
a.expansion-button {
  width: 22px;
  height: 22px;
  font-size: 22px;
  color: #585a5a;
  text-decoration: none;
  -webkit-transform:rotate(0deg);
  -ms-transform:rotate(0deg);
  transform:rotate(0deg);

  -webkit-transition: -webkit-transform 0.25s linear;
  -moz-transition: transform 0.25s linear;
  -ms-transition: -ms-transform 0.25s linear;
  -o-transition: transform 0.25s linear;
  transition: transform 0.25s linear;
  &:hover, &:active {
    color: #fff;
  }
}
.open a.expansion-button {
  -webkit-transform:rotate(180deg);
  -ms-transform:rotate(180deg);
  transform:rotate(180deg);
}
a.btn {
  position: relative;
  display: inline-block;
  min-width: 175px;
  height: 35px;
  line-height: 35px;
  font-size: 16px;
  background: #fff;
  border: 0;
  border-radius: 20px;
  padding: 0 20px;
  text-align: center;
  font-family: $font-family-sans-serif;
  text-transform: uppercase;
  font-weight: 900;
  color: $brand-primary;
  .theme-red & { color: $brand-red; }
  .theme-green & { color: $brand-green; }
  .theme-blue & { color: $brand-blue; }
  .theme-grey & { color: $brand-grey; }
}
a.btn-xs {
  min-width: 100px;
  height: 25px;
  line-height: 25px;
  font-size: 12px;
  border-radius: 10px;
}
a.btn-sm {
  min-width: 150px;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  border-radius: 15px;
}
a.btn-lg {
  min-width: 200px;
  height: 45px;
  line-height: 45px;
}

a.btn-speech-bubble {
  display: none;
  text-transform: none;
  border-radius: 6px;
  margin-top: 2px;
  margin-right: 2px;
  font-weight: 400;

  -webkit-box-shadow:  0px 2px 3px 0px rgba(0, 0, 0, 0.2);
  -moz-box-shadow:  0px 2px 3px 0px rgba(0, 0, 0, 0.2);
  box-shadow:  0px 2px 3px 0px rgba(0, 0, 0, 0.2);
  /* Small devices (tablets, 768px and up) */
  @media (min-width: 768px) {
    display: inline-block;
  }
  img, .empty-image {
    <% if ruckus? %>
      width: 44px;
      height: 44px;
      border-radius: 50%;
    <% else %>
      width: 35px;
      height: 35px;
      margin-top: 10px;
    <% end %>
    position: absolute;
    overflow: hidden;
    right: 0;
    bottom: -48px;
    border: 1px solid #fff;
    -webkit-box-shadow:  0px 2px 3px 0px rgba(0, 0, 0, 0.3);
    -moz-box-shadow:  0px 2px 3px 0px rgba(0, 0, 0, 0.3);
    box-shadow:  0px 2px 3px 0px rgba(0, 0, 0, 0.3);
  }

  .empty-image {
    border: none;
    background: $primary-1-opacity;
  }
}
a.btn-speech-bubble-arrow {
  &:after {
    position: absolute;
    display: block;
    content: '';
    bottom: -14px;
    right: 45px;
    width: 14px;
    height: 15px;
    background: image-url('speech-button-arrow.png');
  }
}
.question-organization {
  a.btn-speech-bubble-arrow {
    img {
      display: none;
    }
    &:after { display: none !important; }
  }
}
form {
  &.join-campaign {
    clear: both;
    margin: 0 auto;
    width: 80%;
    margin: 0 auto;
    @media (min-width: 768px) {
      width: 60%;
    }
    .form-group {
      width: 100%;
      &:after {
        position: absolute;
        display: block;
        content: '\f00c';
        width: 40px;
        height: 30px;
        line-height: 30px;
        text-align: center;
        top: 5px;
        right: 5px;
        font-family: 'FontAwesome';
        color: #fff;
        background: #60bf96;
        border-radius: 4px;
        z-index: 100;
        opacity: 0;
        visibility: hidden;
        -webkit-transition: opacity 0.25s linear, visibility 0 linear 0.25s;
        -moz-transition: opacity 0.25s linear, visibility 0 linear 0.25s;
        -ms-transition: opacity 0.25s linear, visibility 0 linear 0.25s;
        -o-transition: opacity 0.25s linear, visibility 0 linear 0.25s;
        transition: opacity 0.25s linear, visibility 0 linear 0.25s;
      }
    }
    &.submitted {
      .form-group {
        &:after {
          opacity: 1;
          visibility: visible;
          -webkit-transition: opacity 0.25s linear, visibility 0 linear 0;
          -moz-transition: opacity 0.25s linear, visibility 0 linear 0;
          -ms-transition: opacity 0.25s linear, visibility 0 linear 0;
          -o-transition: opacity 0.25s linear, visibility 0 linear 0;
          transition: opacity 0.25s linear, visibility 0 linear 0;
        }
      }
    }
    input.form-control,
    textarea.form-control {
      padding-right: 50px;
      width: 100%;
      margin-bottom: 5px;
      border: 0;
      &.invalid {
        border: 1px solid $brand-primary;
        background: lighten($brand-primary, 50%);
        .theme-red & {
          border-color: $brand-red;
          background: lighten($brand-red, 50%);
        }
        .theme-green & {
          border-color: $brand-green;
          background: lighten($brand-green, 50%);
        }
        .theme-blue & {
          border-color: $brand-blue;
          background: lighten($brand-blue, 50%);
        }
        .theme-grey & {
          border-color: $brand-grey;
          background: lighten($brand-grey, 50%);
        }
      }
    }
    .terms {
      overflow: hidden;
      font-size: 12px;
      font-family: $font-family-sans-serif;
      font-style: italic;
      height: 0; // Set height dynamically to expand on form focus
      -webkit-transition: height 0.25s linear;
      -moz-transition: height 0.25s linear;
      -ms-transition: height 0.25s linear;
      -o-transition: height 0.25s linear;
      transition: height 0.25s linear;
    }
    .validation-error {
      display: none !important;
    }
  }
}
// Smoothscroll CSS
div.scrollWrapper {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 100%;
  cursor: hand !important;
  cursor: grab !important;
  cursor: -moz-grab !important;
  cursor: -webkit-grab !important;
  div.scrollableArea {
    position: relative;
    width: auto;
    height: 100%;
    > * {
      position: relative;
      display: block;
      float: left;
      padding: 0;
      margin: 0;
    }
  }
}

// Like Button Styles(heart icon)
.likes {
  color: #fff;
  -webkit-transition: text-shadow ease-in-out 0.5s;
  -moz-transition: text-shadow ease-in-out 0.5s;
  -ms-transition: text-shadow ease-in-out 0.5s;
  -o-transition: text-shadow ease-in-out 0.5s;
  transition: text-shadow ease-in-out 0.5s;

  &:hover { color: #fff; }

  .icon-heart span { margin-right: 2px; }

  &.liked {
    color: lighten(#d13734, 40%);
    text-shadow: 0 0 10px #fff;
    @media (min-width: 768px) {
      text-shadow: 0 0 5px #d13734;
      color: $brand-primary;
      .theme-red & { color: $brand-red; }
      .theme-green & { color: $brand-green; }
      .theme-blue & { color: $brand-blue; }
      .theme-grey & { color: $brand-grey; }
    }
  }
}

.social {
  div {
    &.facebook {
      width: 50px;
      height: 20px;
      overflow: hidden;
    }
    &.twitter {
      height: 20px;
    }
  }
}

/* ================================================================
General Wrapper Styles
================================================================ */
#wrapper {
  position: relative;
  /* Small devices (tablets, 768px and up) */
  @media (min-width: 768px) {
    border-top: 6px solid #d45b0b;
    .theme-red & { border-top-color: $brand-red; }
    .theme-green & { border-top-color: $brand-green; }
    .theme-blue & { border-top-color: $brand-blue; }
    .theme-grey & { border-top-color: $brand-grey; }
  }
}
.section {
  position: relative;
  overflow: hidden;
  margin: 0;
  padding: 20px 0;
  /* Small devices (tablets, 768px and up) */
  @media (min-width: 768px) {
    padding: 30px 0;
  }
}

/* ================================================================
Header
================================================================ */
#header {
  padding-bottom: 0;
  padding-top: 0;
  background-color: #000;
  color: #fff;
  /* Small devices (tablets, 768px and up) */
  @media (min-width: 768px) {
    padding-top: 90px;
  }
  #header-bg {
    position: absolute;
    width: 100%;
    height: 100%;
    bottom: 0;
    left: 0;
    background-position: center center;
    background-repeat: no-repeat;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -ms-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
  }
  #join-campaign-head {
    position: relative;
    padding: 0 15px;
    text-align: center;
    <% if wingop? %>
      font-family: $font-family-serif;
    <% end %>
    /* Small devices (tablets, 768px and up) */
    @media (min-width: 768px) {
      position: absolute;
      top: 25px;
      left: 20px;
      padding: 0;
      text-align: left;
      max-width: 400px;
    }
    form.join-campaign {
      margin: 0;
      width: 75%;
      .terms {
        width: 80%;
      }
    }
    p {
      color: #fff;
      font-style: italic;
      /* Small devices (tablets, 768px and up) */
      @media (min-width: 768px) {
        font-size: 16px;
        border-bottom: 1px solid #fff;
        float: left;
        min-width: 300px;
      }
      /* Medium devices (desktops, 992px and up) */
      @media (min-width: 992px) {
        font-size: 19px;
      }
    }
    form {
      display: none;
      /* Small devices (tablets, 768px and up) */
      @media (min-width: 768px) {
        display: block;
        margin-bottom: 10px;
      }
    }

    //Image Placeholder Styles
    img {
      display: none;
      /* Small devices (tablets, 768px and up) */
      @media (min-width: 768px) {
        display: inline-block;
        margin-right: 10px;
      }
    }
    .social {
      display: none;
      padding-top: 5px;
      @media (min-width: 768px) {
        display: block;
      }
      div {
        float: left;
        margin-left: 15px;
        &:first-child {
          margin-left: 0;
        }
      }
    }
  }
  #social-feed {
    position: relative;
    padding: 0;
    text-align: left;
    width: 100%;
    height: 35px;
    margin-bottom: 15px;
    z-index: 1;
    background-color: $brand-primary;
    .theme-red & { background-color: $brand-red; }
    .theme-green & { background-color: $brand-green; }
    .theme-blue & { background-color: $brand-blue; }
    .theme-grey & { background-color: $brand-grey; }
    /* Small devices (tablets, 768px and up) */
    @media (min-width: 768px) {
      position: absolute;
      width: 245px;
      height: auto;
      top: 15px;
      right: 20px;
      padding: 0;
      background-color: #000;
      background-color: rgba(0,0,0,0.5);
      .theme-red &, .theme-green &, .theme-blue &, .theme-grey & {
        background-color: #000;
        background-color: rgba(0,0,0,0.5);
      }
    }
    .social-feed-modal-link {
      position: absolute;
      display: block;
      top: 0;
      right: 0;
      left: 0;
      bottom: 0;
      padding: 0;
      color: #fff;
      <% if wingop? %>
        font-family: $font-family-sans-serif;
      <% end %>
      text-decoration: none;
      @media (min-width: 768px) {
        position: relative;
        top: auto;
        right: auto;
        left: auto;
        bottom: auto;
        padding: 10px 10px 30px;
        z-index: 10;
      }
      .social-feed-meta {
        display: none;
        @media (min-width: 768px) {
          display: block;
          padding: 5px 0 0 20px;
          margin-bottom: 15px;
          min-height: 40px;
          strong, em {
            display: block;
          }
          <% if wingop? %>
            em {
              font-style: normal;
            }
          <% end %>
          img {
            position: absolute;
            overflow: hidden;
            top: 10px;
            left: -20px;
            <% if ruckus? %>
              border-radius: 50%;
            <% end %>
            border: 2px solid #fff;
          }
        }
      }
      .social-feed-meta-shift {
        padding: 5px 0 0;
      }
      .social-feed-message {
        display: block;
        padding: 0 10px 0 20px;
        white-space: nowrap;
        line-height: 35px;
        @media (min-width: 768px) {
          white-space: normal;
          padding: 0;
          line-height: 18px;
          margin-bottom: 10px;
        }
        &:after {
          position: absolute;
          display: block;
          content: '';
          top: 0;
          right: 0;
          bottom: 0;
          width: 80px;
          // http://www.colorzilla.com/gradient-editor/#9d2a28+0,9d2a28+100&0+0,1+100;Custom
          background: url(data:image/svg+xml;base64,);
          background: -moz-linear-gradient(left,  rgba(157,42,40,0) 0%, rgba(157,42,40,1) 49%, rgba(157,42,40,1) 100%); /* FF3.6+ */
          background: -webkit-gradient(linear, left top, right top, color-stop(0%,rgba(157,42,40,0)), color-stop(49%,rgba(157,42,40,1)), color-stop(100%,rgba(157,42,40,1))); /* Chrome,Safari4+ */
          background: -webkit-linear-gradient(left,  rgba(157,42,40,0) 0%,rgba(157,42,40,1) 49%,rgba(157,42,40,1) 100%); /* Chrome10+,Safari5.1+ */
          background: -o-linear-gradient(left,  rgba(157,42,40,0) 0%,rgba(157,42,40,1) 49%,rgba(157,42,40,1) 100%); /* Opera 11.10+ */
          background: -ms-linear-gradient(left,  rgba(157,42,40,0) 0%,rgba(157,42,40,1) 49%,rgba(157,42,40,1) 100%); /* IE10+ */
          background: linear-gradient(to right,  rgba(157,42,40,0) 0%,rgba(157,42,40,1) 49%,rgba(157,42,40,1) 100%); /* W3C */
          @media (min-width: 768px) {
            display: none;
          }
        }
      }
      .likes {
        display: none;
        /* Small devices (tablets, 768px and up) */
        @media (min-width: 768px) {
          position: absolute;
          display: block;
          left: 8px;
          bottom: 8px;
        }
      }
      .more {
        position: absolute;
        display: block;
        bottom: 8px;
        right: 8px;
        /* Small devices (tablets, 768px and up) */
        @media (min-width: 768px) {}
      }
    }
    .social-feed-share {
      display: none;
      /* Small devices (tablets, 768px and up) */
      @media (min-width: 768px) {
        display: block;
        position: absolute;
        width: 20px;
        height: 20px;
        text-align: center;
        top: 8px;
        right: 4px;
        z-index: 40;
        color: #fff;
      }
    }
    //Image Placeholder Styles
    img {
      display: none;
      /* Small devices (tablets, 768px and up) */
      @media (min-width: 768px) {
        display: block;
      }
    }
  }
  #account-header {
    <% if ruckus? %>
      position: relative;
    <% end %>
    padding: 0 15px;
    margin: 0 auto 50px;
    text-align: center;
    /* Small devices (tablets, 768px and up) */
    @media (min-width: 768px) {
      width: 50%;
      padding: 0;
    }
    .account-image {
      position: relative;
      max-height: 140px;
      margin: 0 auto;

      img {
        position: relative;
        display: block;
        max-width: 100%;
      }
    }
    h1 {
      font-size: 30px;
      font-weight: 300;
      <% if ruckus? %>
        font-family: $font-family-serif;
      <% else %>
        font-family: $font-family-sans-serif;
      <% end %>
      text-shadow: 0px 1px 0px #333;
      /* Small devices (tablets, 768px and up) */
      @media (min-width: 768px) {
        font-size: 40px;
      }
      strong {
        font-weight: 700;
      }
      span {
        position: relative;
        display: inline;
        /* Small devices (tablets, 768px and up) */
        @media (min-width: 768px) {
          display: block;
        }
      }
    }
    .account-meta {
      <% if ruckus? %>
        font-family: $font-family-serif;
      <% else %>
        font-family: $font-family-sans-serif;
      <% end %>
      font-weight: 700;
      margin-bottom: 20px;
      font-size: 16px;
      text-shadow: 0px 1px 0px #333;

      span { margin: 0 3px; }

      /* Small devices (tablets, 768px and up) */
      @media (min-width: 768px) {
        font-size: 14px;
      }
      > span {
        font-weight: 300;
      }
    }
  }
  #press_releases {
    position: relative;
    overflow: hidden;
    padding: 0;
    height: 0;
    min-height: 165px;
    -webkit-transition: height 0.5s ease-in-out;
    -moz-transition: height 0.5s ease-in-out;
    -ms-transition: height 0.5s ease-in-out;
    -o-transition: height 0.5s ease-in-out;
    transition: height 0.5s ease-in-out;
    &.open {
      .expansion-container {
        &:after {
          opacity: 1;
        }
      }
    }
    &:after {
      position: absolute;
      display: block;
      content:'';
      z-index: 100;
      height: 30px;
      left: 0;
      bottom: -30px;
      right: 0;
      -webkit-box-shadow:  0px -25px 50px 5px #000;
      -moz-box-shadow:  0px -25px 50px 5px #000;
      box-shadow:  0px -25px 50px 5px #000;
    }
    .expansion-container {
      padding: 10px 0 20px;
      .container {
        position: relative;
        z-index: 10;
      }
      &:after {
        position: absolute;
        display: block;
        content: '';
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        opacity: 0.6;
        z-index: 1;
        //http://www.colorzilla.com/gradient-editor/#000000+0,000000+100&0.9+0,1+100;Custom
        /* IE9 SVG, needs conditional override of 'filter' to 'none' */
        background: url(data:image/svg+xml;base64,);
        background: -moz-linear-gradient(top,  rgba(0,0,0,0.9) 0%, rgba(0,0,0,1) 100%); /* FF3.6+ */
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(0,0,0,0.9)), color-stop(100%,rgba(0,0,0,1))); /* Chrome,Safari4+ */
        background: -webkit-linear-gradient(top,  rgba(0,0,0,0.9) 0%,rgba(0,0,0,1) 100%); /* Chrome10+,Safari5.1+ */
        background: -o-linear-gradient(top,  rgba(0,0,0,0.9) 0%,rgba(0,0,0,1) 100%); /* Opera 11.10+ */
        background: -ms-linear-gradient(top,  rgba(0,0,0,0.9) 0%,rgba(0,0,0,1) 100%); /* IE10+ */
        background: linear-gradient(to bottom,  rgba(0,0,0,0.9) 0%,rgba(0,0,0,1) 100%); /* W3C */
        -webkit-transition: opacity 0.5s linear;
        -moz-transition: opacity 0.5s linear;
        -ms-transition: opacity 0.5s linear;
        -o-transition: opacity 0.5s linear;
        transition: opacity 0.5s linear;
      }
    }
    h3 {
      text-align: center;
      margin-bottom: 20px;
    }
    .endoresment-link {
      position: relative;
      text-align: center;
      margin-bottom: 15px;
      /* Small devices (tablets, 768px and up) */
      @media (min-width: 768px) {
        height: 40px;
      }
      /* Medium devices (desktops, 992px and up) */
      @media (min-width: 992px) {
        margin-bottom: 20px;
      }
      a {
        position: relative;
        color: #fff;
        font-weight: 700;
        &[target="_blank"] {
          &:after {
            position: relative;
            display: inline-block;
            content: "\f14c";
            width: 14px;
            height: 14px;
            color: #fff;
            font-family: FontAwesome;
            font-weight: normal;
            margin-left: 3px;
          }
        }
      }
    }
    #press_releases-button {
      position: absolute;
      bottom: 10px;
      left: 50%;
      margin-left: -11px;
      z-index: 200;
      color: #fff;
    }
  }
}

/* ================================================================
Tab Dropdown
================================================================ */
.tab-selector-wrapper {
  position: relative;
  margin-bottom: 10px;
  &.open {
    .tab-outer {
      display: block;
    }
  }
}
.tab-selector {
  position: relative;
  overflow: hidden;
  border: 2px solid $brand-primary;
  width: 100%;
  height: 50px;
  margin: 0;
  padding: 8px 15px;
  font-size: 22px;
  font-family: $font-family-sans-serif;
  cursor: pointer;
  color: $brand-primary;
  .theme-red & {
    color: $brand-red;
    border-color: $brand-red;
  }
  .theme-green & {
    color: $brand-green;
    border-color: $brand-green;
  }
  .theme-blue & {
    color: $brand-blue;
    border-color: $brand-blue;
  }
  .theme-grey & {
    color: $brand-grey;
    border-color: $brand-grey;
  }

  /* Small devices (tablets, 768px and up) */
  @media (min-width: 768px) {
    display: none;
  }
  &:after {
    display: block;
    position: absolute;
    content: '\f078';
    font-family: FontAwesome;
    font-size: 20px;
    height: 20px;
    width: 20px;
    top: 50%;
    right: 15px;
