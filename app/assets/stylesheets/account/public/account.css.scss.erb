        ul#experience-timeline {
          width: 320px;
          margin: 0 auto;
        }
      }
    }
    #about-tab-button {
      position: absolute;
      display: none;
      bottom: 10px;
      left: 50%;
      margin-left: -11px;
      z-index: 200;
      color: $brand-primary;
      .theme-red & { color: $brand-red; }
      .theme-green & { color: $brand-green; }
      .theme-blue & { color: $brand-blue; }
      .theme-grey & { color: $brand-grey; }
      /* Small devices (tablets, 768px and up) */
      @media (min-width: 768px) {
        display: block;
      }
    }
    #about-tab-containers {
      overflow: hidden;
      position: relative;
      -webkit-transition: height 0.5s ease-in-out;
      -moz-transition: height 0.5s ease-in-out;
      -ms-transition: height 0.5s ease-in-out;
      -o-transition: height 0.5s ease-in-out;
      transition: height 0.5s ease-in-out;
      /* Small devices (tablets, 768px and up) */
      @media (min-width: 768px) {
        height: 0;
        min-height: 245px;
      }
      &:after {
        position: absolute;
        display: none;
        content:'';
        z-index: 100;
        height: 30px;
        left: -20px;
        bottom: -30px;
        right: -20px;
        -webkit-box-shadow:  0px -18px 45px 14px #f7f7f7;
        -moz-box-shadow:  0px -18px 45px 14px #f7f7f7;
        box-shadow:  0px -18px 45px 14px #f7f7f7;
        /* Small devices (tablets, 768px and up) */
        @media (min-width: 768px) {
          display: block;
        }
      }
      &.short:after {
        display: none;
      }
      > div {
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        opacity: 0;
        visibility: hidden;
        -webkit-transition: opacity 0.25s linear, visibility 0s linear 0.25s;
        -moz-transition: opacity 0.25s linear, visibility 0s linear 0.25s;
        -ms-transition: opacity 0.25s linear, visibility 0s linear 0.25s;
        -o-transition: opacity 0.25s linear, visibility 0s linear 0.25s;
        transition: opacity 0.25s linear, visibility 0s linear 0.25s;
        &.active {
          opacity: 1;
          visibility: visible;
          -webkit-transition: opacity 0.25s linear, visibility 0s linear 0s;
          -moz-transition: opacity 0.25s linear, visibility 0s linear 0s;
          -ms-transition: opacity 0.25s linear, visibility 0s linear 0s;
          -o-transition: opacity 0.25s linear, visibility 0s linear 0s;
          transition: opacity 0.25s linear, visibility 0s linear 0s;
        }
      }
      #experience-timeline {
        position: relative;
        padding: 0;
        margin: 0 0 0 30px;
        list-style-type: none;
        &:before {
          position: absolute;
          display: block;
          content: '';
          top: 0;
          left: 50px;
          bottom: 0;
          width: 5px;
          background: #e6e6e6;
        }
        li {
          position: relative;
          overflow: hidden;
          height: 85px;
          margin-bottom: 10px;
          padding-left: 85px;
          .date {
            position: absolute;
            width: 50px;
            left: 0;
            top: 50%;
            margin-top: -10px;
            font-weight: 700;
            font-family: $font-family-sans-serif;
            color: $brand-primary;
            .theme-red & { color: $brand-red; }
            .theme-green & { color: $brand-green; }
            .theme-blue & { color: $brand-blue; }
            .theme-grey & { color: $brand-grey; }
            &:after {
              position: absolute;
              display: block;
              overflow: hidden;
              content: '';
              top: 0;
              right: -12px;
              width: 19px;
              height: 19px;
              border-radius: 50%;
              border: 3px solid #f7f7f7;
              background-color: $brand-primary;
              .theme-red & { background-color: $brand-red; }
              .theme-green & { background-color: $brand-green; }
              .theme-blue & { background-color: $brand-blue; }
              .theme-grey & { background-color: $brand-grey; }
            }
          }
          .timeline-event {
            position: relative;
            display: table;
            width: 220px;
            height: 100%;
            padding: 10px 15px;
            background-color: #fff;
            border-bottom: 1px solid #d5d5d5;
            &:before, &:after {
              position: absolute;
              display: block;
              content: '';
              width: 0;
              height: 0;
              border-top: 10px solid transparent;
              border-bottom: 10px solid transparent;
              left: -10px;
              top: 50%;
            }
            &:before {
              border-right:10px solid #d5d5d5;
              margin-top: -9px;
            }
            &:after {
              border-right:10px solid #fff;
              margin-top: -10px;
            }
            div {
              display: table-cell;
              vertical-align: middle;
              line-height: 20px;
            }
            h5 {
              display: block;
              margin: 0;
              line-height: 20px;
              font-family: $font-family-sans-serif;
              font-weight: 600;
              color: $brand-primary;
              .theme-red & { color: $brand-red; }
              .theme-green & { color: $brand-green; }
              .theme-blue & { color: $brand-blue; }
              .theme-grey & { color: $brand-grey; }
            }
            strong {
              display: block;
            }
          }
        }
      }
    }
  }
}

