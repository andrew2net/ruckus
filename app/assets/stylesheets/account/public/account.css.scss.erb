      margin: 0;
      @media (min-width: 768px) {
        text-transform: none;
        font-size: 22px;
        height: 90px;
        line-height: 24px;
        padding-top: 24px;
      }
      .year {
        @media (min-width: 768px) {
          display: block;
          font-size: 14px;
        }
      }
    }
    a.event-navigation {
      position: absolute;
      display: block;
      overflow: hidden;
      color: #fff;
      width: 30px;
      height: 30px;
      line-height: 30px;
      top: 50%;
      margin-top: -15px;
      opacity: 1;
      font-weight: 300;
      -webkit-transition: opacity 0.25s linear;
      -moz-transition: opacity 0.25s linear;
      -ms-transition: opacity 0.25s linear;
      -o-transition: opacity 0.25s linear;
      transition: opacity 0.25s linear;
      @media (min-width: 768px) {
        font-size: 20px;
      }
      &:hover {
        opacity: 0.8;
      }
      &.prev {
        left: 10px;
        @media (min-width: 768px) {
          left: 0;
        }
      }
      &.next {
        right: 10px;
        @media (min-width: 768px) {
          right: 0;
        }
      }
    }
  }
  .event {
    position: relative;
    overflow: hidden;
    padding: 30px 0;
    border-top: 1px solid #dbdbdb;
    &:first-child {
      padding-top: 0;
      border-top: none;
    }
    .event-meta {
      position: relative;
      overflow: hidden;
      margin-bottom: 15px;
      .day {
        position: relative;
        display: block;
        font-size: 50px;
        float: left;
        margin: 0 15px 0 0;
        font-family: $font-family-sans-serif;
        font-weight: 700;
        line-height: 1em;
        top: -7px;
        width: 60px;
        color: $brand-primary;
        .theme-red & { color: $brand-red; }
        .theme-green & { color: $brand-green; }
        .theme-blue & { color: $brand-blue; }
        .theme-grey & { color: $brand-grey; }
      }
      .title {
        color: #353535;
        margin-left: 75px;
        h3 {
          <% if ruckus? %>
            font-family: $font-family-serif;
          <% else %>
            font-family: $font-family-sans-serif;
          <% end %>
          font-weight: 400;
          font-size: 20px;
          margin: 0;
        }
        .location {
          font-weight: 600;
          font-family: $font-family-sans-serif;
        }
      }
    }
    .event-description {
      clear: both;
      p {
        margin: 0 0 20px;
      }
    }
    .event-details {
      background: #f0f0f0;
      overflow: hidden;
      max-height: 200px;
      .details {
        padding: 15px;
        @media (min-width: 768px) {
          float: left;
          width: 50%;
          font-size: 14px;
          font-family: $font-family-sans-serif;
        }
        h5 {
          font-family: $font-family-sans-serif;
          font-size: 14px;
          text-transform: uppercase;
          font-weight: 700;
          margin: 0 0 5px;
        }
      }
      .map {
        display: none;
        @media (min-width: 768px) {
          display: block;
          width: 50%;
          float: right;
          height: 180px;
        }
        img {
          width: 100%;
          height: 100%;
          max-width: 100%;
          max-height: 100%;
        }
      }
    }
    .social {
      position: relative;
      @media (min-width: 768px) {
        position: absolute;
        top: 22px;
        right: 0;
      }
    }
  }
}

// Issues modal
.issues-single-modal {
  .ruckus-modal-head-content {
    line-height: 45px;
    @media (min-width: 768px) {
      line-height: 90px;
    }
  }
  .ruckus-modal-body {
    overflow: scroll;
    .ruckus-modal-body-content {
      padding-top: 30px;
      padding-bottom: 20px;
      > div {
        overflow: hidden;
      }
      h5 {
        <% if ruckus? %>
          font-family: $font-family-serif;
        <% else %>
          font-family: $font-family-sans-serif;
        <% end %>
        margin: 0 0 10px;
        font-size: 20px;
        font-weight: 300;
      }
    }
  }
  &.issue-education {
    .ruckus-modal-head {
      background-color: $education-color;
    }
  }
  &.issue-healthcare {
    .ruckus-modal-head {
      background-color: $healthcare-color;
    }
  }
  &.issue-economy {
    .ruckus-modal-head {
      background-color: $economy-color;
    }
  }
  &.issue-veteran-affairs {
    .ruckus-modal-head {
      background-color: $veteran-affairs-color;
    }
  }
}

// Prev/Next Modal Buttons for Issues
button.issues-arrow {
  left: 50%;
  width: 40px;
  height: 70px;
  margin-top: -35px;
  &:before { display: none; }
  &:after {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    text-indent: 0;
    font-family: 'FontAwesome';
    font-size: 40px;
    margin: 0;
    padding: 0;
    line-height: 1em;
    border: none;
    color: $brand-primary;
    .theme-red & { color: $brand-red; }
    .theme-green & { color: $brand-green; }
    .theme-blue & { color: $brand-blue; }
    .theme-grey & { color: $brand-grey; }
  }
  &:active {
    margin-top: -35px;
  }
  &.mfp-arrow-right {
    right: auto;
    margin-left: 338px;
    &:after {
      content: '\f054';
    }
  }
  &.mfp-arrow-left {
    margin-left: -377px;
    &:after {
      content: '\f053';
    }
  }
}

// donations modal
.donate-modal {
  min-height: 600px;
  @media (max-width: 768px) {
    min-height: 480px;
  }
  background-color: #fafbfb;
  .ruckus-modal-head {
    background-color: #333;
    .ruckus-modal-head-content {
      position: relative;
    }
  }
  .ruckus-modal-body {
    .ruckus-modal-body-content {
      padding: 0;
    }
  }
  .donate-form {
    position: relative;
    overflow: hidden;
    display: block;
    width: 100%;
    .invalid {
      label {
        color: $brand-primary;
        .theme-red & { color: $brand-red; }
        .theme-green & { color: $brand-green; }
        .theme-blue & { color: $brand-blue; }
        .theme-grey & { color: $brand-grey; }
      }
      input, textarea, select {
        border: 1px solid $brand-primary;
        .theme-red & { border-color: $brand-red; }
        .theme-green & { border-color: $brand-green; }
        .theme-blue & { border-color: $brand-blue; }
        .theme-grey & { border-color: $brand-grey; }
      }
    }
    span.validation-error {
      display: none !important;
    }
    label {
      em {
        font-style: normal;
        font-weight: 300;
      }
    }
    .row {
      margin-left: -5px;
      margin-right: -5px;
      .form-group {
        padding-left: 5px;
        padding-right: 5px;
      }
    }
    div.terms {
      position: relative;
      overflow-x: hidden;
      overflow-y: auto;
      height: 120px;
      background: #fff;
      padding: 10px;
      font-family: $font-family-sans-serif;
    }
    .tooltip {
      min-width: 125px;
    }
    .dontate-amount {
      position: relative;
      overflow: hidden;
      .radio {
        float: left;
        margin: 0 12px 15px 0;
        label {
          font-size: 15px;
          font-weight: 700;
        }
        input {
          margin-left: -15px;
        }
        &:first-child {
          margin-left: 0;
        }
        &.other-amount {
          width: 100%;
          display: table;
          margin-bottom: 15px;
          label {
            display: table-cell;
            vertical-align: middle;
            padding-right: 15px;
            width: 10%;
          }
          div.form-group {
            overflow: hidden;
            width: 0;
            margin: 0;
            -webkit-transition: width 0.25s ease-in-out;
            -moz-transition: width 0.25s ease-in-out;
            -ms-transition: width 0.25s ease-in-out;
            -o-transition: width 0.25s ease-in-out;
            transition: width 0.25s ease-in-out;
            &.active {
              width: 100%;
              @media (min-width: 768px) {
                width: 38%;

              }
            }
            input {
              margin: 0;
            }
          }
        }
      }
    }
  }
  #donation-steps {
    width: 100%;
    position: absolute;
    z-index: 100;
    height: 24px;
    line-height: 24px;
    bottom: -38px;
    color: #d1d1d1;
    font-size: 14px;
    font-weight: 700;
    font-family: $font-family-sans-serif;
    text-align: left;
    padding-left: 10px;
    @media (min-width: 768px) {
      text-align: center;
      bottom: -12px;
      color: #fff;
    }
    span {
      position: relative;
      display: inline-block;
      overflow: hidden;
      width: 18px;
      height: 24px;
      @media (min-width: 768px) {
        width: 24px;
        height: 24px;
        background: #d1d1d1;
        margin: 0 11%;
        border-radius: 50%;
        -webkit-box-shadow: 0 0 0 4px #ffffff;
        box-shadow: 0 0 0 4px #ffffff;
      }
      &.current {
        color: $brand-primary;
        @media (min-width: 768px) {
          color: #fff;
          background-color: $brand-primary;
          .theme-red & { background-color: $brand-red; }
          .theme-green & { background-color: $brand-green; }
          .theme-blue & { background-color: $brand-blue; }
          .theme-grey & { background-color: $brand-grey; }
        }
      }
      &.completed {
        color: #333;
        font-style: italic;;
        @media (min-width: 768px) {
          color: #fff;
          text-indent: 100%;
          background-color: #333;
          font-style: normal;
        }
        &:after {
          position: absolute;
          display: none;
          content: '\f00c';
          font-family: 'FontAwesome';
          top: 0;
          right: 0;
          bottom: 0;
          left: 0;
          text-align: center;
          text-indent: 0;
          font-weight: 300;
          @media (min-width: 768px) {
            display: block;
          }
        }
      }
    }
  }
  .slide-inner {
    position: relative;
    overflow: hidden;
    padding: 40px 40px 20px;
  }
  .donate-step {
    <% if ruckus? %>
      font-family: $font-family-serif;
    <% else %>
      font-family: $font-family-sans-serif;
    <% end %>
    position: relative;
    width: 100%;
    height: 100%;
    color: #333;
    h2 {
      <% if ruckus? %>
        font-family: $font-family-serif;
      <% else %>
        font-family: $font-family-sans-serif;
      <% end %>
      margin: 0 0 10px;
      font-size: 20px;
    }
    p {
      font-size: 12px;
      margin: 0 0 15px;
      @media (min-width: 768px) {
        font-size: 14px;
      }
    }
    button {
      display: block;
      margin: 0 auto;
      margin-bottom: 15px;
    }
    a.donate-cancel {
      clear: both;
      display: inline-block;
      color: #b9b9b9;
      font-size: 12px;
      font-family: $font-family-sans-serif;
    }
    div.next, div.submit {
      text-align: center;
      margin-bottom: 0;
      @media (min-width: 768px) {
        button {
          float: right;
          display: inline-block;
          margin-left: 15px;
        }
        a.donate-cancel {
          float: right;
          clear: none;
          line-height: 40px;
        }
      }
    }
  }
  .css-slider {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 100%;
    padding: 0;
    margin: 0;
  }
}
